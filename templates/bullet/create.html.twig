{% extends 'base.html.twig' %}

{% block title %}Création Compétence{% endblock %}
    
{% block body %}
    {{ form_start(form) }}

	<div class="form-modif-bullet">
		<div class='control'>
			<h1>
				Création de votre journée
			</h1>
		</div>

		<h2>Jour :</h2>
        <div class="form__group field">
  			{{ form_widget(form.day) }}
		</div>

		<h2>Détail de la journée :</h2>
		{{ form_widget(form.description) }}

        <h2>Tag 1 :</h2>
        <div class="form__group field">
  			{{ form_widget(form.tag1) }}
		</div>

        <h2>Tag 2 :</h2>
         <div class="form__group field">
  			{{ form_widget(form.tag2) }}
		</div>

        <h2>Tag 3 :</h2>
         <div class="form__group field">
  			{{ form_widget(form.tag3) }}
		</div>

		<div class="btn-save">
			{{ form_widget(form.Enregistrer) }}
		</div>
	</div>
    {{ form_end(form) }}
{% endblock %}